<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dbproject.dbprojectgui.ClientPanelController">
    <top>
        <GridPane alignment="CENTER" prefHeight="60.0" prefWidth="600.0" style="-fx-background-color: eeeeee;" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="90.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="325.0" minWidth="10.0" prefWidth="325.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="90.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <Label fx:id="nameLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="140.0" text="NAME">
                <font>
                    <Font name="System Italic" size="15.0" />
                </font>
            </Label>
            <Label fx:id="accountLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="325.0" text="ACCOUNTID" GridPane.columnIndex="1">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Label fx:id="balanceLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="140.0" text="BALANCE" GridPane.columnIndex="2">
                <font>
                    <Font size="15.0" />
                </font>
            </Label>
        </GridPane>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <Button onAction="#viewAccountHistory" prefHeight="25.0" prefWidth="200.0" text="Display account history" />
            <Button onAction="#viewOperationsByMonth" prefHeight="25.0" prefWidth="200.0" text="Display operations by month" />
            <Button onAction="#viewCardsAndDetails" prefHeight="25.0" prefWidth="200.0" text="Cards and details" />
            <Button onAction="#viewOperationsByOperationType" prefHeight="25.0" prefWidth="200.0" text="Display operations by type" />
            <Button onAction="#viewClientOperationsByCategories" prefHeight="25.0" prefWidth="200.0" text="Display operations by categories" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
                <ChoiceBox fx:id="operationsChoiceBox" onAction="#operationsChoiceBoxOnAction" prefHeight="25.0" prefWidth="200.0" value="Choose operation...">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Withdraw" />
                            <String fx:value="Deposit" />
                            <String fx:value="Transfer" />
                            <String fx:value="Phone transfer" />
                            <String fx:value="Transfer to own account" />
                        </FXCollections>
                    </items>
                </ChoiceBox>
                <Button fx:id="operationButton" onAction="#operationButtonOnClick" prefHeight="25.0" prefWidth="125.0" text="Perform operation" />
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
                <ChoiceBox fx:id="changeChoiceBox" onAction="#changeChoiceBoxOnAction" prefHeight="25.0" prefWidth="200.0" value="Choose operation...">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Card PIN" />
                            <String fx:value="Card Limit" />
                            <String fx:value="Password" />
                        </FXCollections>
                    </items>
                </ChoiceBox>
                <Button fx:id="changeButton" onAction="#changeButtonOnClick" prefHeight="25.0" prefWidth="125.0" text="Change" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
